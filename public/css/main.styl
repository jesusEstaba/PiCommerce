sombra = 0 0 5px rgba(black, .26)

nav
	background white
	box-shadow 0 0 8px rgba(black, .26)
	height 65px
	position relative

body
	background #eee
	display flex
	flex-direction column
	min-height 100vh

footer
	background #17733A
	box-shadow 0 0 15px rgba(black, .4)
	color white
	min-height 60px
	width 100%
	p
		text-align center
	a
		color #FFD914 !important
	img
		display block
		margin-bottom .5em
		margin-left auto
		margin-right auto
		margin-top .5em

.separator-fix-footer
	flex 1 0 auto

.logo
	left 0
	margin-left auto
	margin-right auto
	position absolute
	right 0

.space
	margin-top 100px

.category-choose
	height auto
	margin-bottom 10px
	margin-bottom 1em
	position relative

.image-category
	background url('../images/banners/3fbef54e0b946103d3b0bea136304ce9.png') center center fixed no-repeat
	background-size cover
	height 160px
	width 100%

.name-category
	background #D42027
	color white
	ul
		li
			background darken(#BA1C22, 20%)
			border-radius 5px
			color white
			display inline-block
			margin 5px
			padding 10px
			transition .8s box-shadow, .8s background
			&:hover
				background lighten(#BA1C22, 25%)
				box-shadow 0 0 15px rgba(black, .36)
			a
				color white
				&:hover
					text-decoration none

.elements
	div
		margin 0 !important
		padding-bottom .5em
		padding-top .5em

	.type
		background white
		border-radius 5px
		margin-bottom 1em
		transition 1s box-shadow ease
		&:hover
			box-shadow 0 0 15px rgba(black, .3)

.choose
	border-radius 5px
	display block
	margin-left auto
	margin-right auto
	transition 0.8s box-shadow
	&:hover
		box-shadow 0 0 10px rgba(black, .4)

.text-choose
	color white
	left 2em
	position absolute
	text-shadow 0 0 3px rgba(black, .7)
	z-index 3

.toppings
	background white

.head-build
	background #b2b2b2

.counter-price
	background white
	border-radius 5px
	box-shadow 0 0 2px rgba(black, .26)

.list-cart
	border-radius 5px
	margin-bottom 50px

.btn-lg
	display block
	font-size 2em
	padding-bottom 1em
	padding-top 1em

.actions-cart
	div
		margin-bottom 1em

.btn-cart
	float right
	margin-top 1em

.btn-infosite
	margin-top 1em

.title
	color #fff
	text-shadow 0 0 5px rgba(black, .5)